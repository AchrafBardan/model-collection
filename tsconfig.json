{
  "compilerOptions": {
    "module": "CommonJS",            
    "target": "ESNext",       
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/tests/*": [
        "tests/*"
      ]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
}
